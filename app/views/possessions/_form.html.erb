<div class='row'>
	
	<%= simple_form_for(@possession, html: { class: "custom "}) do |f| %>
		<fieldset>
			<legend>Possessions</legend>
			<div class='row'>
				<div class="large-10 small-8 columns">
					<div class="form-inputs">
					    <%= f.input :title, placeholder: "Title"  %>
					    <%= f.association :category, :collection => Category.all, :prompt => "Select a Category", placeholder: "Category" %>
					    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }%>
					    <%= f.input :description, placeholder: "Description"  %>
					</div>
					<div class="row">
						<div id="display-label" class="large-1 small-1 columns">
							<%= f.button :submit %>
						</div>
					</div>
				</div>
			</div>
	<% end %>
