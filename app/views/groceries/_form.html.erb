<div class="row">
	<%= simple_form_for(@grocery) do |f| %>
	<fieldset>
		<legend>Grocery Item</legend>
		<div class='row'>
			<div class='large-6 small-3 columns'>
				<div class='form-inputs'>
					<%= f.input :item, placeholder: "Item name", input_html: { class: "text" } %>
					<%= f.input :location, placeholder: "Purchase Location" %>
				    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }%>
				</div>
				<div class="row">
					<div id="display-label" class="large-1 small-1 columns">
						<%= f.button :submit, :class => "small" %>
					</div>
				</div>
			</div>
		</div>
	</fieldset>
	<% end %>
</div>
