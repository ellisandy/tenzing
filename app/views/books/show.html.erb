<div class='row'>
	<div class="12 columns">
	   <p id="notice"><%= notice %></p>

		<h2>Book</h2>
	   <p>
	     <b>Title:</b>
	     <%= @book.title %>
	   </p>

	   <p>
	     <b>Author:</b>
	     <%= @book.author %>
	   </p>

		<p>
			<b>Genre:</b>
			<%= @book.genre.title %>
		</p>

	   <p>
	     <b>User:</b>
	     <%= @book.user.username %>
	   </p>

	   <p>
	     <b>Read:</b>
	     <%= @book.read %>
	   </p>


	   <%= link_to 'Edit', edit_book_path(@book), class: "button small" %> |
	   <%= link_to 'Back', books_path, class: "button small" %>
	</div>
</div>